<h1>Books</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count%>件のエラーが発生しました

  <ul>
    <% @book.errors.full_messages.each do |messages|%>
      <li><%= messages %></li>
      <% end %>
  </ul>
 <% end %>


<%=form_with model:@book, url: '/books', method: :post, local:true do |f| %>

<h2>New book</h2>
  <p>Title</p>
<%= f.text_field:title %>

  <p>Body</p>
<%= f.text_area:body %>

<%= f.submit'Create Book'%>


<% end %>


